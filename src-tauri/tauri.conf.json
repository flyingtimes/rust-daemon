{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Rust Daemon",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "process": {
        "all": false,
        "exit": false,
        "relaunch": true
      },
      "shell": {
        "all": false,
        "open": false,
        "sidecar": true,
        "execute": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": false,
        "minimize": false,
        "unmaximize": false,
        "unminimize": false,
        "startDragging": false
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.example.rustdaemon",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [
        "bin/naive"
      ],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null,
        "providerShortName": null
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 400,
        "resizable": false,
        "title": "配置",
        "width": 400,
        "visible": false,
        "label": "config",
        "url": "config.html"
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://youtube.com https://*.youtube.com https://*.googlevideo.com; img-src 'self' https: data:; script-src 'self' https://youtube.com https://*.youtube.com; style-src 'self' 'unsafe-inline' https://youtube.com https://*.youtube.com; frame-src https://youtube.com https://*.youtube.com"
    },
    "updater": {
      "active": false
    }
  }
}
